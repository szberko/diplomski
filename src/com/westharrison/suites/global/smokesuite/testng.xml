<?xml version="1.0" encoding="UTF-8"?>

<suite name="Global Smoke Suite" verbose="1">


	<test name="Global Smoke Tests - CHROME">
		<parameter name="browser" value="chrome" />
		<groups>
			<run>
				<include name="before" />
				<include name="after" />
				<include name="global" />
			</run>
		</groups>

		<classes>
			<class name="com.westharrison.test.SmokeTests" />
		</classes>
	</test>


	<test name="Global Smoke Tests - FIREFOX">
		<parameter name="browser" value="firefox" />
		<groups>
			<run>
				<include name="before" />
				<include name="after" />
				<include name="global" />
			</run>
		</groups>

		<classes>
			<class name="com.westharrison.test.SmokeTests" />
		</classes>
	</test>

</suite>
